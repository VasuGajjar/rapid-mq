{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
